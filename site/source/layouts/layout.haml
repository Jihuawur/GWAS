!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")

    %title= current_page.data.title

    = stylesheet_link_tag "normalize", "bootstrap.min", "bootstrap-theme.min", "theme"

  %body(class=page_classes role="document")

    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand StatGen
        .navbar-collapse.collapse#navbar
          %ul.nav.navbar-nav
            %li
              = link_to 'Home', '/index.html'
            %li
              = link_to 'About', '/about.html'
            %li.dropdown
              %a.dropdown-toggle(href='#' data-toggle='dropdown' role='button')
                Tutorial
                %span.caret
              %ul.dropdown-menu(role='menu')
                %li 
                  = link_to "Introduction", "/tut/tut_intro.html"
                %li 
                  = link_to "Data pre-processing", '/tut/tut_preproc.html'
                %li 
                  = link_to 'Data generation', '/tut/tut_generation.html'
                %li 
                  = link_to 'Genome-wide association analysis', '/tut/tut_analysis.html'
                %li 
                  = link_to 'Post-analytic visualizatin and genomic integration', '/tut/tut_post.html'
                
    .container(role='main')
      ~ yield

    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js", "bootstrap.min.js"
